<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/ambient_light_preview_paddingVertical"
    android:paddingLeft="@dimen/ambient_light_preview_paddingHorizontal"
    android:paddingRight="@dimen/ambient_light_preview_paddingHorizontal"
    android:paddingBottom="@dimen/ambient_light_preview_paddingVertical" >

    <LinearLayout
        android:layout_width="@dimen/ambient_light_preview_layout_width"
        android:layout_height="@dimen/ambient_light_preview_layout_height"
        android:layout_gravity="center"
        android:background="@drawable/ic_phone"
        android:paddingLeft="@dimen/ambient_light_preview_imageview_marginHorizontal"
        android:paddingRight="@dimen/ambient_light_preview_imageview_marginHorizontal"
        android:paddingTop="@dimen/ambient_light_preview_imageview_marginVertical"
        android:paddingBottom="@dimen/ambient_light_preview_imageview_marginVertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ambient_light_preview_imageview_left"
            android:layout_width="@dimen/ambient_light_preview_imageview_width"
            android:layout_height="match_parent"
            android:src="@drawable/aod_notification_light_left"
            android:tint="#3c3c3c"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ambient_light_preview_imageview_right"
            android:layout_width="@dimen/ambient_light_preview_imageview_width"
            android:layout_height="match_parent"
            android:src="@drawable/aod_notification_light_right"
            android:layout_gravity="right" />

    </LinearLayout>
</LinearLayout>