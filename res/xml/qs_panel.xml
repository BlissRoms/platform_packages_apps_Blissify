<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bliss="http://schemas.android.com/apk/res-auto">

    <Preference 
        android:key="bliss_logo"
        android:layout="@layout/bliss_logo" />

    <PreferenceCategory
        android:key="tile_style"
        android:title="@string/tile_bg" />

    <ListPreference
        android:key="qs_tile_style"
        android:title="@string/qs_tile_style_title"
        android:persistent="false"
        android:entries="@array/qs_selector_entries"
        android:entryValues="@array/qs_selector_values" />

    <PreferenceCategory
        android:key="bright_slide"
        android:title="@string/bright_slide" />

        <com.bliss.support.preferences.SecureSettingSwitchPreference
            android:key="qs_show_brightness_slider"
            android:title="@string/brightness_slider_title"
            android:summary="@string/brightness_slider_summary"
            android:defaultValue="true"/>

        <com.bliss.support.preferences.SecureSettingSwitchPreference
            android:key="qs_brightness_position_bottom"
            android:title="@string/qs_brightness_position_bottom_title"
            android:summary="@string/qs_brightness_position_bottom_summary"
            android:defaultValue="false"
            android:dependency="qs_show_brightness_slider" />

        <com.bliss.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_brightness_icon"
            android:title="@string/brightness_icon_title"
            android:summary="@string/brightness_icon_summary"
            android:dependency="qs_show_brightness_slider"
            android:defaultValue="false"/>

        <com.bliss.support.preferences.SystemSettingSwitchPreference
            android:key="qs_show_brightness_buttons"
            android:title="@string/brightness_buttons_title"
            android:summary="@string/brightness_buttons_summary"
            android:dependency="qs_show_brightness_slider"
            android:defaultValue="false"/>

    <PreferenceCategory
        android:key="icons_and_info"
        android:title="@string/icons_and_info" />

        <com.bliss.support.preferences.SecureSettingSwitchPreference
            android:key="qs_show_info_header"
            android:title="@string/qs_show_info_header_title"
            android:summary="@string/qs_show_info_header_summary"
            android:defaultValue="false" />

        <com.bliss.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_settings"
            android:title="@string/qs_footer_settings_title"
            android:summary="@string/qs_footer_settings_summary"
            android:defaultValue="true" />

         <com.bliss.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_services"
            android:title="@string/qs_footer_services_title"
            android:summary="@string/qs_footer_services_summary"
            android:defaultValue="false" />

        <com.bliss.support.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_warnings"
            android:title="@string/qs_footer_warnings_title"
            android:summary="@string/qs_footer_warnings_summary"
            android:defaultValue="true" />

    <PreferenceCategory
        android:key="panel_options"
        android:title="@string/panel_options" />

        <com.bliss.support.preferences.SecureSettingSwitchPreference
	    android:key="qs_show_drag_handle"
	    android:title="@string/tuner_show_drag_handle_title"
	    android:summary="@string/tuner_show_drag_handle_summary"
	    android:defaultValue="true" />

        <com.bliss.support.preferences.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false"/>

        <com.bliss.support.preferences.SystemSettingSeekBarPreference
            android:key="qs_panel_alpha"
            android:title="@string/qs_panel_alpha_title"
            android:summary="@string/qs_panel_alpha_summary"
            android:max="100"
            bliss:min="0"
            bliss:unitsRight="@string/unit_percent"
            android:persistent="false" />

        <ListPreference
            android:key="quick_pulldown"
            android:title="@string/quick_pulldown_title"
            android:entries="@array/quick_pulldown_entries"
            android:entryValues="@array/quick_pulldown_values"
            android:persistent="false" />

        <ListPreference
            android:key="smart_pulldown"
            android:title="@string/smart_pulldown_title"
            android:entries="@array/smart_pulldown_entries"
            android:entryValues="@array/smart_pulldown_values"
            android:persistent="false" />

</PreferenceScreen>
